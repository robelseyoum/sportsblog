extends layout

block content
    .container
        h1 #{title}
        ul.errors
            if errors
                each error, i in errors
                    li.alert.alert-danger #{error.msg}
        form(method='post', action='/categories/add')
            .form-group
                label Title:
                input.form-control(name='title', type='text')
            .form-group
                label Description:
                textarea.form-control(name='description')
            input.btn.btn-primary(type='submit', name='submit' value='Save')
            a(href='/manage/categories' class="btn btn-dark ml-1") Back