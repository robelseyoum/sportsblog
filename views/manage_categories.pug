extends layout

block content
    .container
        .row
            .col-md-9
                h2 #{title}
            .col-md-3
                a(class="btn btn-secondary mt-2", href='/manage/categories/add') Add Category
        !=messages()
        table(class='table table-striped')
            tr
                th Category Title
                th Action
            each category, i in categories 
                tr
                    td #{category.title}
                    td
                        a(class="btn btn-tiny btn-info" href='/manage/categories/edit/'+category._id) Edit
